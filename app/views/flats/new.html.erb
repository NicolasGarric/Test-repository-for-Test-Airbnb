<h1>Créer un nouvel appartement</h1>

<%= form_with model: @flat, url: flats_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :name, "Nom de l'appartement" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :address, "Adresse" %>
    <%= form.text_field :address, required: true %>
  </div>

  <div>
    <%= form.label :price, "Prix par nuit (€)" %>
    <%= form.number_field :price, step: 0.01, required: true %>
  </div>

  <div>
    <%= form.label :max_guests, "Nombre maximum de personnes" %>
    <%= form.number_field :max_guests, min: 1, required: true %>
  </div>

  <div>
    <%= form.label :available, "Disponible" %>
    <%= form.check_box :available %>
  </div>

  <div>
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, rows: 3, required: true %>
  </div>

  <%= form.submit "Créer", class: "btn btn-success" %>
<% end %>

<%= link_to 'Annuler', flats_path, class: "btn btn-secondary mt-3" %>

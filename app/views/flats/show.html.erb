<h1><%= @flat.name %></h1>

<p>
  <strong>Address:</strong>
  <%= @flat.address %>
</p>

<p>
  <strong>Description:</strong>
  <%= @flat.description %>
</p>

<p>
  <strong>Price per night:</strong>
  <%= number_to_currency(@flat.price) %>
</p>

<%# Boutons bas de page avec actions sur show flat %>
<div class="d-flex gap-2">
  <%= link_to 'Edit', edit_flat_path(@flat) %>
  <%= link_to 'Back', flats_path %>
  <div>
    <%= form_with model: @flat, url: flat_path(@flat), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this flat?" } do %>
      <%= submit_tag "Delete", class: "text-danger" %>
    <% end %>
  </div>
</div>
